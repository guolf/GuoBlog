<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SubText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?subTitleColor</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Preference" />

    <style name="Preference.Category">
        <item name="android:layout">@layout/preference_category_holo</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="ButtonBarButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">50dp</item>
    </style>

    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">?attr/lineColor</item>
    </style>
    <!-- 纵向线条 -->
    <style name="v_line">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?attr/lineColor</item>
    </style>

    <!-- 操作项样式 start -->
    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/layout_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/space_13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="option_item_text_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/space_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

</resources>